{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Whisperdict",
  "version": "0.1.0",
  "identifier": "com.whisperdict.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Whisperdict",
        "width": 800,
        "height": 600
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons-app/32x32.png",
      "icons-app/128x128.png",
      "icons-app/128x128@2x.png",
      "icons-app/icon.icns",
      "icons-app/icon.ico"
    ]
  }
}
