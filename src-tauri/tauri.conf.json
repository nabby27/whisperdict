{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Whisperdict",
  "version": "0.1.0",
  "identifier": "com.whisperdict.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Whisperdict",
        "width": 800,
        "height": 600
      }
    ],
    "trayIcon": {
      "iconPath": "icons-app/32x32.png"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "copyright": "Copyright (c) 2026 Whisperdict contributors",
    "createUpdaterArtifacts": false,
    "targets": "all",
    "icon": [
      "icons-app/32x32.png",
      "icons-app/128x128.png",
      "icons-app/128x128@2x.png",
      "icons-app/icon.icns",
      "icons-app/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "-----BEGIN PUBLIC KEY-----\nMCowBQYDK2VwAyEAhF1QAOwKWnaFJwoeneZPwCOsB2eZyzVnhOFdU8Qa5d0=\n-----END PUBLIC KEY-----",
      "endpoints": [
        "https://github.com/nabby27/whisperdict/releases/latest/download/latest.json"
      ]
    }
  }
}
